    <script>
        const studentsData = {
            "MUSAIDI BIN MUSTAFA": {
                "CHEN YU FANG": "2024182440030",
                "MUHAMMAD JUAN IRFAN BIN MOHD HAZARI": "2024182440038",
                "YONG YING JIE": "2024182440052"
            },
            "ABDUL SATAR BIN HAMZAH": {
                "AINI NAJWA BINTI AZNAN": "2024182440080",
                "MUHAMMAD AMIR AIMAN BIN NOR HISHAM": "2024182440086",
                "MUHAMMAD IRSYAD BIN LUKMAN": "2024182440088"
            },
            "DR. NAJIHAH BINTI SHUIB": {
                "ELHAM ALIFWAFY BIN ELEIAS": "2024182440104",
                "MOHAMMAD HAZIMAN BIN MOHD JAMIL": "2024182440108",
                "NUR ATIKAH BINTI AZIAN": "2024182440117",
                "NURUL ATHIRAH BINTI MOHD AZIZI": "2024182440122"
            },
            "KHOLID BIN SALLEH": {
                "NUR IRDINA SAFIA BINTI SAHRUL AMIR": "2024182440180",
                "NURUL AINA BINTI HASIRUN": "2024182440182",
                "SITI SYAFIQAH BINTI ABDULLAH": "2024182440185"
            },
            "YUSRI BIN YUSOFF (KU JHEP)": {
                "MUHAMMAD AFEEQ FAKHRULLAH BIN MARZUKI": "2024182440199"
            }
        };

        function filterStudents() {
            const lecturerSelect = document.getElementById('lecturerName');
            const studentSelect = document.getElementById('studentName');
            const agiiranInput = document.getElementById('agiiran');
            const selectedLecturer = lecturerSelect.value;
            studentSelect.innerHTML = '<option value="">Pilih Pelajar</option>';
            agiiranInput.value = '';

            if (studentsData[selectedLecturer]) {
                Object.keys(studentsData[selectedLecturer]).forEach(student => {
                    const option = document.createElement('option');
                    option.value = student;
                    option.textContent = student;
                    studentSelect.appendChild(option);
                });
                studentSelect.style.display = 'block';
            } else {
                studentSelect.style.display = 'none';
            }
        }

        function fillAgiiran() {
            const studentSelect = document.getElementById('studentName');
            const agiiranInput = document.getElementById('agiiran');
            const lecturerSelect = document.getElementById('lecturerName');
            const selectedStudent = studentSelect.value;
            const selectedLecturer = lecturerSelect.value;

            if (selectedStudent && studentsData[selectedLecturer] && studentsData[selectedLecturer][selectedStudent]) {
                agiiranInput.value = studentsData[selectedLecturer][selectedStudent];
            } else {
                agiiranInput.value = '';
            }
        }

        document.getElementById('reportForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            fetch('https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById('status').innerText = data.message;
                if (data.success) {
                    alert('PDF telah dijana dan disimpan sebagai [Nama_Pelajar]_Laporan.pdf');
                }
            })
            .catch(error => console.error('Error:', error));
        });
    </script>
